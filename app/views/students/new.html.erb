<%# in app/views/students/new.html.erb %>
<%= form_with model: @student do |student_form| %>
  <%= student_form.label :first %>
  <%= student_form.text_field :first %>

  <%= student_form.label :last %>
  <%= student_form.text_field :last %>

  <%= student_form.label :homeroom %>
  <%= student_form.text_field :homeroom %>

  <%= student_form.label :graduation_year %>
  <%= student_form.number_field :graduation_year %>

  <%= student_form.submit "Create student" %>
<% end %>
<%# Can also use min and max in number fields. %>