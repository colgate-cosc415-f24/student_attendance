<h3>Student details</h3>

<dl>
  <dt>Name</dt>
  <dd><%= @student.name %></dd>

  <dt>Homeroom</dt>
  <dd><%= @student.homeroom %></dd>

  <dt>Graduation year</dt>
  <dd><%= @student.graduation_year %></dd>

  <dt>Absence reasons</dt>
  <dd><%= reason_display(@student.absence_reasons) %></dd>

  <dt>Tardy reasons</dt>
  <dd><%= reason_display(@student.tardy_reasons) %></dd>

</dl>
<br>

<% if current_user && (current_user.attendant? || current_user.admin?) %>
  <%= link_to "Add to attendance record", new_student_attendance_record_path(@student), class: "btn btn-success" %>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th>Date
      <th>Status
      <th>Reason
      <th>Description
    </tr>
  </thead>
  <tbody>
    <%= render @student.attendance_records %>
  </tbody>
</table>

<%= link_to "Edit student record", edit_student_path(@student) %>
<br>
<%= button_to "Delete student record", student_path(@student), method: :delete, class: "btn btn-danger" %>
<br>
<%= link_to "Back to all students", students_path, class: "btn btn-primary" %>
